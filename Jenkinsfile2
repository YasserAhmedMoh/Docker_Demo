pipeline {
    agent any
    environment {
        NODE_ENV = 'production'
        BRANCH_NAME = "${env.BRANCH_NAME}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('build Docker Image') {
            steps {
                //sh  "docker.build ${DOCKER_REGISTRY} ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}/${env.BRANCH_NAME}"
                //sh "docker login -u ${JFROG_USERNAME} -p ${JFROG_PASSWORD} ${DOCKER_REGISTRY}"
                //sh "docker login -u $JF_REGISTRY_USER -p $JFROG_PASSWORD"
                //sh "docker login -u admin -p password http://192.168.96.132:8082/artifactory/devops"
                //sh "docker login -u cadmin -p P@ssw0rd localhost:8082/artifactory/docker_jfrog_repo/"
                echo "P@ssw0rd" | docker login -u cadmin --password-stdin http://localhost:8082/artifactory/docker_jfrog_repo/

                //sh "docker build -f Dockerfile . -t app admin/devops:${BUILD_NUMBER}"
                sh "docker build -f Dockerfile . -t  localhost:8082/docker_jfrog_repo/app:${BUILD_NUMBER}"
            }
        }
        stage('Push Docker Image') {
            steps {
                //sh "docker push devops:$BUILD_NUMBER"
                sh "docker push localhost:8082/docker_jfrog_repo/app:${BUILD_NUMBER}"
                //sh  "docker.push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}/${env.BRANCH_NAME}"
            }
        }
    }   //}
}
